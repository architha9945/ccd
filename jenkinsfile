pipeline {
    agent any

    environment {
        IMAGE_NAME = "ccd-cafe"
        CONTAINER_NAME = "ccd-cafe-container"
        PORT = "3000"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/architha9945/ccd.git' // ğŸ” Replace with your repo if needed
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t $IMAGE_NAME ."
                }
            }
        }

        stage('Stop Existing Container') {
            steps {
                script {
                    sh """
                        docker stop $CONTAINER_NAME || true
                        docker rm $CONTAINER_NAME || true
                    """
                }
            }
        }

        stage('Run New Container') {
            steps {
                script {
                    sh "docker run -d --name $CONTAINER_NAME -p $PORT:$PORT $IMAGE_NAME"
                }
            }
        }
    }

    post {
        success {
            echo "CCD CafÃ© deployed successfully at http://localhost:$PORT"
        }
        failure {
            echo "Something went wrong."
 Â Â Â Â Â Â Â }
Â Â Â Â }
}